<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".Update">


    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="@color/endblue">

        <TextView
            android:id="@+id/textGrid"
            android:paddingTop="20dp"
            android:text="Update Profile"
            android:textSize="20sp"
            android:textColor="@color/graylight"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:layout_gravity="center"
        android:layout_marginTop="35dp">

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/mtu">

        </ImageView>

        <EditText
            android:id="@+id/textName"
            android:hint="Username"
            android:background="@drawable/bginput"
            android:paddingLeft="10dp"
            android:layout_width="288dp"
            android:layout_height="40dp"
            android:inputType="text"
            android:layout_gravity="center_horizontal"
            >

        </EditText>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:layout_gravity="center"
        android:layout_marginTop="35dp">

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_lock_outline_black_24dp">

        </ImageView>



        <EditText
            android:id="@+id/password"
            android:hint="Password"
            android:background="@drawable/bginput"
            android:paddingLeft="10dp"
            android:layout_width="288dp"
            android:layout_height="40dp"
            android:inputType="textPassword"
            android:layout_gravity="center_horizontal"
            >

        </EditText>


    </LinearLayout>

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginTop="45dp">


        <TextView
            android:id="@+id/county"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="County"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/startblue">

        </TextView>

        <Spinner
            android:id="@+id/spinner_dropdown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </Spinner>

    </LinearLayout>

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginTop="20dp">


        <TextView
            android:id="@+id/category"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Category"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/startblue">

        </TextView>

        <Spinner
            android:id="@+id/spinner_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </Spinner>

    </LinearLayout>

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginTop="20dp">


        <TextView
            android:id="@+id/gender"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Marathon Type"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/startblue">

        </TextView>

        <Spinner
            android:id="@+id/spinner_marathon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </Spinner>

    </LinearLayout>


    <Button
        android:id="@+id/save_changes"
        android:textColor="#fff"
        android:text="Save Changes"
        android:background="@drawable/buttonstyleithgradient"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="45dp"
        android:layout_width="150dp"
        android:layout_height="wrap_content"

        >

    </Button>


</LinearLayout>

