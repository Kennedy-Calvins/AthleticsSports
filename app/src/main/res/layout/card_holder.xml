<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/startblue"
    android:padding="20dp">


    <ImageView
        android:id="@+id/teamIcon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        android:background="@drawable/design_image_background"
        android:padding="5dp"/>

    <TextView
        android:id="@+id/athlete_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/teamIcon"
        android:layout_toEndOf="@id/teamIcon"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:textColor="@color/graylight"
        android:textStyle="bold"
        android:textSize="16sp"
        android:text="Athlete Name"
        />

    <TextView
        android:id="@+id/athlete_phone_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/teamIcon"
        android:layout_toEndOf="@id/teamIcon"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_below="@+id/athlete_name"
        android:textColor="@color/graylight"
        android:textStyle="bold"
        android:textSize="16sp"
        android:text="Phone No."
        />

<!--    <View-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height=""-->
<!--        android:background="@color/graylight"/>-->



</RelativeLayout>